# =============================================================================
# 📊 Database Configuration
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=parental_control

# =============================================================================
# 🌐 Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8765
DEBUG=True

# =============================================================================
# 🔐 Security & Authentication
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# 🤖 2FA Telegram Bot (Shared for ALL admins)
# =============================================================================
# این ربات برای ارسال کدهای OTP به همه ادمین‌ها استفاده میشه
# هر ادمین chat_id شخصی خودش رو داره (در دیتابیس)
TELEGRAM_2FA_BOT_TOKEN=1234567890:ABC-YOUR-2FA-BOT-TOKEN-HERE
TELEGRAM_2FA_CHAT_ID=-1001234567890

# =============================================================================
# 📱 Administrator's 5 Telegram Bots
# =============================================================================
# این 5 ربات مخصوص ادمین اصلی (Administrator/Super Admin) هستن
# از همون اول سرور، این ربات‌ها تنظیم میشن
# مثل ربات 2FA، از config می‌خونه

# Bot 1: Device Notifications (رجیستر، آنلاین/آفلاین، آپلود)
ADMIN_BOT1_TOKEN=1111111111:AAA-ADMIN-DEVICES-BOT-TOKEN
ADMIN_BOT1_CHAT_ID=-1001111111111

# Bot 2: SMS Notifications (فقط SMS های جدید)
ADMIN_BOT2_TOKEN=2222222222:BBB-ADMIN-SMS-BOT-TOKEN
ADMIN_BOT2_CHAT_ID=-1002222222222

# Bot 3: Admin Activity Logs (دستورات، تغییرات، اقدامات ادمین‌ها)
ADMIN_BOT3_TOKEN=3333333333:CCC-ADMIN-LOGS-BOT-TOKEN
ADMIN_BOT3_CHAT_ID=-1003333333333

# Bot 4: Login/Logout Logs (ورود و خروج همه ادمین‌ها)
ADMIN_BOT4_TOKEN=4444444444:DDD-ADMIN-AUTH-BOT-TOKEN
ADMIN_BOT4_CHAT_ID=-1004444444444

# Bot 5: Future Use (استفاده آینده - مثلاً build های اپلیکیشن)
ADMIN_BOT5_TOKEN=5555555555:EEE-ADMIN-FUTURE-BOT-TOKEN
ADMIN_BOT5_CHAT_ID=-1005555555555

# =============================================================================
# ⚙️ Telegram Settings
# =============================================================================
TELEGRAM_ENABLED=True

# =============================================================================
# 🕐 WebSocket & Ping Settings
# =============================================================================
PING_INTERVAL=30
CONNECTION_TIMEOUT=60
MAX_MESSAGE_SIZE=10485760

# =============================================================================
# 📅 Data Retention Settings (in days)
# =============================================================================
SMS_RETENTION_DAYS=180
LOGS_RETENTION_DAYS=30
ADMIN_ACTIVITY_RETENTION_DAYS=90

# =============================================================================
# 📝 توضیحات:
# =============================================================================
#
# 🔹 چطور توکن ربات بگیرم؟
#    1. به @BotFather در تلگرام برو
#    2. /newbot رو بزن
#    3. اسم و username ربات رو مشخص کن
#    4. توکن رو کپی کن
#
# 🔹 چطور Chat ID بگیرم؟
#    1. ربات رو استارت کن
#    2. یه پیام بهش بفرست (مثلاً /start)
#    3. برو به: https://api.telegram.org/bot<TOKEN>/getUpdates
#    4. chat.id رو پیدا کن (عدد منفی مثلاً: -1001234567890)
#
# 🔹 می‌تونم همه ربات‌ها رو به یک Chat ID بدم؟
#    بله! میشه همه 5 ربات رو به یک chat_id بدی
#    همه پیام‌ها تو یک چت می‌ریزن
#
# 🔹 تفاوت ربات 2FA با 5 ربات دیگه چیه؟
#    - ربات 2FA: برای همه ادمین‌ها مشترکه (فقط یک توکن)
#    - 5 ربات دیگه: مخصوص Administrator هست
#
# 🔹 ادمین‌های دیگه چطور ربات میگیرن؟
#    وقتی ادمین جدید میسازی، باید 5 ربات بهش بدی:
#    POST /admin/create با فیلد telegram_bots
#
# =============================================================================
