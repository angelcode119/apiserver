MONGODB_DB_NAME=parental_control

# ═══════════════════════════════════════════════════════
# Server Configuration
# ═══════════════════════════════════════════════════════
SERVER_HOST=0.0.0.0
SERVER_PORT=8765
DEBUG=True

# ═══════════════════════════════════════════════════════
# Security & JWT
# ═══════════════════════════════════════════════════════
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
